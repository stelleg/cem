fst = \p.(p true)
snd = \p.(p false)

f = (Y \f.{odd = (fst f) even = (snd f)} 
  (pair
    \n.(n = 0 false (even (n - 1)))
    \n.(n = 0 true (odd (n - 1)))))

odd = (fst f) even = (snd f)

main = (>> (putStr "Enter number: ")
       (>>= getLine \i.
       [(printf "%s is odd: %b" i) showBool odd readInt i]))
